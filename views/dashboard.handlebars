<section>
    <form class="new-post-form mt-2">
        <h3 class="new-post-header">Recommend a restaurant that you've loved:</h3>
        <div class="mt-1 mb-1">
            <label class="label-text font-weight-bold" for="post-title">Title:</label>
            <input type="text" id="post-title" name="post-title"/>
        </div>
        <div class="mt-1 mb-1">
            <label class="label-text font-weight-bold" for="city-name">City Name:</label>
            <select name="city-name" id="city-name">
                <option value="dallas">Dallas</option>
                <option value="austin">Austin</option>
                <option value="houston">Houston</option>
            </select>
        </div>
        <div class="mt-1 mb-1">
            <label class="label-text font-weight-bold" for="restaurant-name">Restaurant Name:</label>
            <input id="restaurant-name" name="restaurant-name"/>
        </div>
        <div class="mt-1 mb-1">
            <label class="label-text font-weight-bold" for="restaurant-url">Restaurant Website:</label>
            <input id="restaurant-url" name="restaurant-url"/>
        </div>
        <div class="mt-1 mb-1">
            <label class="label-text font-weight-bold" for="comment-text">Comments:</label>
            <input id="comment-text" name="comment-text"/>
        </div>
        <div>
            {{> post-photo post}}
        </div>
        {{!-- <button type="submit" class="greenbtn btn-dark mt-3">Submit Your Post</button> --}}
    </form>


{{#if posts.length}}
<br>
<section>
  <h2 class="post-header">Your Posts:</h2>
  <div class="post-container">
    {{#each posts as |post|}}
    <div class="card">
      {{> post-info post}}
    </div>
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>

 